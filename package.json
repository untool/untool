{
  "name": "ununtool",
  "description": "javascript tooling platform",
  "author": "dmbch <daniel@dmbch.net>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "cd tests/fixtures/untest; un start",
    "build": "cd tests/fixtures/untest; un build",
    "serve": "cd tests/fixtures/untest; un serve",
    "test": "NODE_ENV=test ava",
    "lint": "eslint --ignore-path .gitignore '**/*.js'",
    "fmt": "prettier --write --ignore-path .gitignore '**/*.js'",
    "release": "lerna publish",
    "release:next": "lerna publish prerelease",
    "release:preminor": "lerna publish preminor",
    "release:premajor": "lerna publish premajor",
    "update": "yarn upgrade-interactive --latest",
    "snapshot": "yarn reset && yarn test -u",
    "reset": "git clean -dfx && yarn",
    "pretest": "git clean -dfX tests/fixtures/untest",
    "posttest": "git clean -dfXq tests/fixtures",
    "preinstall": "[ -z \"${npm_execpath##*yarn*}\" ] || exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/untool/untool.git"
  },
  "bugs": {
    "url": "https://github.com/untool/untool/issues"
  },
  "homepage": "https://github.com/untool/untool#readme",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@commitlint/travis-cli": "^8.0.0",
    "ava": "^2.0.0",
    "babel-eslint": "^10.0.0",
    "canarist": "^1.2.1",
    "cycle": "^1.0.3",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.0.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-prettier": "^3.0.0",
    "flat": "^4.0.0",
    "husky": "^2.0.0",
    "is-plain-obj": "^2.0.0",
    "lerna": "^3.0.0",
    "lint-staged": "^8.0.0",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "prettier": "1.16.4",
    "puppeteer": "^1.4.0",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-helmet": "^5.2.0",
    "react-redux": "^7.0.0",
    "react-router-dom": "^4.2.2 || ^5.0.0",
    "redux": "^4.0.0",
    "rimraf": "^2.6.2",
    "supertest": "^4.0.0",
    "uuid": "^3.2.1"
  },
  "engines": {
    "node": ">8.6.0"
  },
  "ava": {
    "timeout": "240s",
    "verbose": true,
    "files": [
      "tests/**/*",
      "!tests/fixtures"
    ],
    "helpers": [
      "tests/helpers/*"
    ],
    "source": [
      "packages/**/*"
    ]
  },
  "canarist": {
    "repositories": [
      {
        "repository": ".",
        "commands": [
          ""
        ]
      },
      "https://github.com/xing/hops.git"
    ],
    "rootManifest": {
      "resolutions": {
        "fs-extra": "7.0.1"
      }
    }
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "lockFileMaintenance": {
      "enabled": true
    },
    "ignoreDeps": [
      "prettier"
    ],
    "semanticCommits": true,
    "semanticCommitScope": "{{parentDir}}",
    "packageRules": [
      {
        "paths": ["package.json"],
        "semanticCommitScope": null
      },
      {
        "depTypeList": ["devDependencies"],
        "rangeStrategy": "bump"
      },
      {
        "depTypeList": ["peerDependencies"],
        "rangeStrategy": "widen"
      }
    ],
    "prCreation": "not-pending"
  },
  "prettier": {
    "arrowParens": "always",
    "trailingComma": "es5",
    "singleQuote": true,
    "proseWrap": "never"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    },
    "env": {
      "node": true,
      "es6": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-enum": [
        2,
        "always",
        [
          "untool",
          "core",
          "express",
          "info",
          "react",
          "webpack",
          "yargs"
        ]
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
